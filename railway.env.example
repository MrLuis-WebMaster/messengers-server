# Railway Environment Variables
# Copy these to Railway dashboard and set the values

# Application
PORT=3000
NODE_ENV=production

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=1h

# Authentication
AUTH_USERNAME=admin
AUTH_PASSWORD=admin123
DEFAULT_API_KEY=webhook-default-key-12345

# Webhook Security
WEBHOOK_SECRET=your-webhook-secret-change-this
LISTMONK_WEBHOOK_SECRET=your-listmonk-webhook-secret

# CORS
ALLOWED_ORIGINS=https://your-frontend-domain.com,https://your-listmonk-domain.com

# Logging
LOG_LEVEL=info

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=10

# WhatsApp Configuration (Disabled in Railway)
WHATSAPP_SESSION_NAME=whatsapp-session

# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token-here
SLACK_SIGNING_SECRET=your-slack-signing-secret-here

# Listmonk Configuration
LISTMONK_DEFAULT_PHONE_FIELD=phone
LISTMONK_DEFAULT_CHANNEL=#general
